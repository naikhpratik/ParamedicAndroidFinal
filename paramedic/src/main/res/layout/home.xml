<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        android:background="@drawable/title_bar" >

        <TextView
            android:id="@+id/follow"
            style="@style/topbar_textsmall"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/follow" />

        <TextView
            android:id="@+id/title"
            style="@style/topbar_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/about"
            style="@style/topbar_textsmall"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/about" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/titlebar"
        android:background="@drawable/home_bg"
        android:gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/quizzes"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/home_quizzes" />

                <ImageView
                    android:id="@+id/flashcards"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/home_fcards" />
                
                <ImageView
                    android:id="@+id/scenarios"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/home_scenarios" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_dosing_home"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/home_dosing" />
                
                <ImageView
                    android:id="@+id/img_cardiology_home"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/home_cardio" />
                
                <ImageView
                    android:id="@+id/toolbox"
                    android:layout_width="@dimen/home_icon_size"
                    android:layout_height="@dimen/home_icon_size"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/home_toolbox" />

                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>